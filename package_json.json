[build-system]
requires = ["setuptools>=45", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "mslearn-authoring-mcp-server"
version = "1.0.0"
description = "MCP server for Microsoft Learn content authoring and style guide compliance"
authors = [
    {name = "Your Name", email = "your.email@example.com"}
]
readme = "README.md"
license = {text = "MIT"}
requires-python = ">=3.8"
classifiers = [
    "Development Status :: 4 - Beta",
    "Intended Audience :: Developers",
    "License :: OSI Approved :: MIT License",
    "Programming Language :: Python :: 3",
    "Programming Language :: Python :: 3.8",
    "Programming Language :: Python :: 3.9",
    "Programming Language :: Python :: 3.10",
    "Programming Language :: Python :: 3.11",
    "Programming Language :: Python :: 3.12",
]
keywords = [
    "mcp",
    "microsoft-learn",
    "content-authoring",
    "style-guide",
    "documentation"
]

dependencies = [
    "mcp>=1.0.0",
    "requests>=2.28.0",
    "beautifulsoup4>=4.11.0",
    "markdownify>=0.11.0",
    "lxml>=4.9.0"
]

[project.optional-dependencies]
dev = [
    "pytest>=7.0.0",
    "pytest-asyncio>=0.21.0",
    "black>=22.0.0",
    "flake8>=5.0.0",
    "mypy>=1.0.0",
    "types-requests>=2.28.0",
    "types-beautifulsoup4>=4.11.0"
]

[project.scripts]
mslearn-authoring-mcp-server = "mslearn_authoring_server:main"

[project.urls]
Homepage = "https://github.com/yourusername/mslearn-authoring-mcp-server"
Documentation = "https://github.com/yourusername/mslearn-authoring-mcp-server#readme"
Repository = "https://github.com/yourusername/mslearn-authoring-mcp-server"
Issues = "https://github.com/yourusername/mslearn-authoring-mcp-server/issues"

[tool.setuptools]
py-modules = ["mslearn_authoring_server"]

[tool.black]
line-length = 100
target-version = ['py38']

[tool.mypy]
python_version = "3.8"
warn_return_any = true
warn_unused_configs = true
disallow_untyped_defs = true

[tool.pytest.ini_options]
asyncio_mode = "auto"
testpaths = ["tests"]